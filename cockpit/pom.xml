<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.ow2.petals</groupId>
    <artifactId>petals-cockpit-parent</artifactId>
    <version>0.2.0-SNAPSHOT</version>
  </parent>

  <artifactId>petals-cockpit</artifactId>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>org.ow2.petals</groupId>
      <artifactId>petals-cockpit-server</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.dropwizard-bundles</groupId>
      <artifactId>dropwizard-configurable-assets-bundle</artifactId>
      <version>1.0.0</version>
    </dependency>
    <dependency>
      <groupId>com.palantir.indexpage</groupId>
      <artifactId>dropwizard-index-page</artifactId>
      <version>1.0.0</version>
    </dependency>
    <!-- Code quality dependencies -->
    <dependency>
      <groupId>org.eclipse.jdt</groupId>
      <artifactId>org.eclipse.jdt.annotation</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>copy-frontend</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target name="copy frontend dist to cockpit resources">
                <copy todir="${project.build.directory}/classes/frontend/">
                  <fileset dir="${project.basedir}/../frontend/dist/" />
                </copy>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>sg.enixsoft</groupId>
        <artifactId>capsule-maven-plugin</artifactId>
        <version>1.3.0</version>
        <executions>
          <execution>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <appClass>org.ow2.petals.cockpit.PetalsCockpitApplication</appClass>
              <type>fat</type>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <manifest>
            <entry>
              <key>Min-Java-Version</key>
              <value>${java-version}</value>
            </entry>
            <entry>
              <key>Java-Agents</key>
              <value>co.paralleluniverse:quasar-core:${quasar.version}:jdk8</value>
            </entry>
          </manifest>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
